{
  "name": "git-tags-commit-diff",
  "version": "1.0.0",
  "description": "Git Tags Commit 差異比較 - Electron 桌面應用程式",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-mac": "rm -rf ./dist && electron-builder --mac",
    "build-win": "rm -rf ./dist && electron-builder --win",
    "build-linux": "rm -rf ./dist && electron-builder --linux"
  },
  "author": "你的名字",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "simple-git": "^3.20.0"
  },
  "build": {
    "appId": "com.kathylai.git-tags-commit-diff",
    "productName": "Git Tags Commit 差異比較",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "package.json",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "node_modules/simple-git",
        "to": "app/node_modules/simple-git",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
